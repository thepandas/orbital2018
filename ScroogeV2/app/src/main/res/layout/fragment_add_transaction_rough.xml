<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="600dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Type" />

        <Spinner
            android:id="@+id/type"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:padding="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/type"
            android:text="Amount" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="293dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView2"
            android:hint="Amount"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal|numberSigned"
            android:singleLine="true"
            android:textSize="30sp" />

        <TextView
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_toEndOf="@+id/type"
            android:text="Date" />


        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="186dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="96dp"
            android:layout_toEndOf="@+id/type"
            android:text="date"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/dateTextView"
            android:layout_marginEnd="33dp"
            android:text="--"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTextView"
            android:layout_toEndOf="@+id/type"
            android:text="Category">


        </TextView>

        <Button
            android:id="@+id/incomeExpenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:text="Expenditure"
            android:textSize="10sp"></Button>

        <Spinner
            android:id="@+id/category"
            android:layout_width="294dp"
            android:layout_height="47dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView">

        </Spinner>

        <TextView
            android:layout_width="120dp"
            android:layout_height="19dp"
            android:layout_alignStart="@+id/dateTextView"
            android:layout_below="@+id/category"
            android:text="Description"></TextView>

        <EditText
            android:id="@+id/description"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="229dp"
            android:hint="Description"
            android:inputType="none"
            android:singleLine="true"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/timeTextView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="254dp"
            android:text="Income"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="254dp"
            android:layout_toEndOf="@+id/type"
            android:text="Expense" />
    </RelativeLayout>






</FrameLayout>