<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/walletNameWalletInfo"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Wallet Name"
        android:textColor="#555555"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/walletNameWalletInfo"
        android:text="Created by: Jeff , 02/01/2013"
        android:layout_marginLeft="30dp"
        android:id="@+id/infoOnwallet"/>
    <TextView
        android:id="@+id/memberSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoOnwallet"
        android:text="Members: 5"
        android:layout_marginLeft="30dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listOfMembersInWalletInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memberSize"
        android:layout_marginTop="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>