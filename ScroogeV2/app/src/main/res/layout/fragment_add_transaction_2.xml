<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/textView3"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="Transaction type"
               android:textAllCaps="true"
               android:background="@drawable/formheader"/>

           <TextView
               android:id="@+id/textViewAccount"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Account"
               android:textAllCaps="true"
               android:background="@drawable/formheader" />
       </android.support.v7.widget.LinearLayoutCompat>
       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <Spinner
               android:id="@+id/type"
               android:layout_width="150dp"
               android:layout_height="37dp"
               android:layout_below="@+id/textView3"
               android:padding="0dp" />
           <TextView
               android:id="@+id/incomeExpenditure"
               android:layout_width="match_parent"
               android:layout_height="37dp"
               android:text="Expenditure"
               android:textSize="30sp"/>


       </android.support.v7.widget.LinearLayoutCompat>


       <TextView
           android:id="@+id/textView2"
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:background="@drawable/formheader"

           android:text="AMOUNT" />

       <EditText android:id="@+id/amount"
           android:layout_width="match_parent"
           android:layout_height="51dp"
           android:layout_below="@+id/textView2"
           android:hint="Amount"
           android:imeOptions="actionDone"
           android:inputType="numberDecimal"
           android:singleLine="true"
           android:textSize="30sp" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/amount"
           android:background="@drawable/formheader"
           android:text="Date"
           android:textAllCaps="true"/>

       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/dateTextView"
               android:layout_width="186dp"
               android:layout_height="39dp"
               android:text="date"
               android:textSize="30sp" />

           <TextView
               android:id="@+id/timeTextView"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:text="--"
               android:textSize="30sp" />
       </android.support.v7.widget.LinearLayoutCompat>


       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/dateTextView"
           android:background="@drawable/formheader"
           android:text="Category">


       </TextView>
       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/addTransactionSpinnerImg"
               android:layout_width="47dp"
               android:layout_height="47dp"
               android:src="@drawable/food"/>
           <Spinner
               android:id="@+id/category"
               android:layout_width="match_parent"
               android:layout_height="47dp"
               android:layout_below="@+id/textView">
           </Spinner>
       </android.support.v7.widget.LinearLayoutCompat>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="19dp"
           android:layout_below="@+id/category"
           android:background="@drawable/formheader"
           android:text="Product/Service Name"></TextView>

       <EditText
           android:id="@+id/editTextName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Name"
           android:inputType="none"
           android:singleLine="true"
           android:textSize="30sp" />


       <TextView
           android:id="@+id/textView7"
           android:layout_width="match_parent"
           android:layout_height="19dp"
           android:layout_below="@+id/category"
           android:background="@drawable/formheader"
           android:text="Description"></TextView>

       <EditText
           android:id="@+id/description"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Description"
           android:inputType="none"
           android:singleLine="true"
           android:textSize="30sp" />

       <Button
           android:id="@+id/buttonExpense"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Submit"
           android:backgroundTint="@color/floatingActionButtonColor"
           android:textColor="#ffffff"/>
       <Button
           android:id="@+id/buttonIncome"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Submit"
           android:visibility="gone"
           android:backgroundTint="@color/floatingActionButtonColor"
           android:textColor="#ffffff"/>
       <Button
           android:id="@+id/buttonEdit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Submit"
           android:visibility="gone"
           android:backgroundTint="@color/floatingActionButtonColor"
           android:textColor="#ffffff"/>
       <Button
           android:id="@+id/storeTemplateIncome"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Store Template"
           android:backgroundTint="@color/floatingActionButtonColor"
           android:textColor="#ffffff"/>

   </LinearLayout>





</FrameLayout>