<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id = "@+id/screen_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </FrameLayout>

    <FrameLayout
        android:id = "@+id/screen_area_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility = "visible"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainContentScroll">


        <android.support.v7.widget.GridLayout
            android:id="@+id/gridFrames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <FrameLayout
                android:id = "@+id/screen_area_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="0"
                app:layout_row="0"
                app:layout_gravity="fill"
                android:visibility = "visible">


            </FrameLayout>

            <FrameLayout
                android:id = "@+id/screen_area_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="0"
                app:layout_row="1"
                app:layout_gravity="fill"
                android:visibility = "visible">



            </FrameLayout>

            <FrameLayout
                android:id = "@+id/screen_area_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="0"
                app:layout_row="2"
                app:layout_gravity="fill"
                android:visibility = "visible">

            </FrameLayout>

            <FrameLayout
                android:id = "@+id/screen_area_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="0"
                app:layout_row="3"
                app:layout_gravity="fill"
                android:visibility = "visible">

            </FrameLayout>

            <FrameLayout
                android:id = "@+id/screen_area_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_column="0"
                app:layout_row="4"
                app:layout_gravity="fill"
                android:visibility = "visible">

            </FrameLayout>

        </android.support.v7.widget.GridLayout>
        </ScrollView>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>